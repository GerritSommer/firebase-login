<div class="col-sm-12">
  <h4>Add a new cocktail</h4>
</div>

<div class="menu--item col-sm-12 col-xs-12">

  <div class="menu--item__wrapper clearfix">
    <div class="row">

      <div class="form-group col-sm-10 col-xs-12">
        {{input value=model.name
          class="form-control"
          placeholder="Name"
        }}
      </div>

      <div class="form-group col-sm-2" col-xs-12>
        {{input value=model.price
          class="form-control"
          placeholder="â‚¬"
        }}
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-12">
        {{textarea value=model.description
          class="form-control"
          placeholder="Beschreibung"
        }}
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <div class="pull-right">
          <button {{action 'cancel'}} type="submit" class="btn btn-default">cancel</button>
          <button {{action 'saveCocktail'}} type="submit" class="btn btn-primary">Submit</button>
        </div>
      </div>
    </div>

  </div>

</div>

